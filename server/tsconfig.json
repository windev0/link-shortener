{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",               // ✅ Passe à "ESNext" ou "NodeNext"
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
